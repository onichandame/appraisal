extends form.pug 

block form
  div(class="custom-file")
    input(type="file",name="input",id="input",class="custom-file-input",required)
    label(class="custom-file-label",for="name") 输入表格
    div(class="invalid-feedback") Choose a file
    script.
      $('#input').on('change',function(){
        var filename=$(this).val().split('\\').pop()
        $(this).siblings('#input~.custom-file-label').addClass('selected').html(filename)
      })
  div(class="form-group justify-content-center")
    button(id="submit",type="submit",class="col-xs-10 col-md-6 col-lg-3 btn btn-primary col center-block",style="font-size:1.5rem;") Submit
