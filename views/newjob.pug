extends form.pug 

block form
  div(class="form-group")
    select(class="custom-select",name="engine",required)
      option(value="") Select an engine
      option(value="mcnp6.1") mcnp6.1
      option(value="phits") phits
      option(value="mc4nbp") mc4nbp
    div(class="invalid-feedback") Please select one engine
  div(class="custom-file")
    input(type="file",id="file",class="custom-file-input",required)
    label(class="custom-file-label",for="file") Choose file
    div(class="invalid-feedback") Choose a file
  div(class="row justify-content-center")
    button(id="submit",type="submit",class="col-xs-10 col-md-6 col-lg-3 btn btn-primary col center-block",style="font-size:1.5rem;") Submit
